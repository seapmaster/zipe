Процедура ДобавитьЗапись(Объект, Идентификатор, Состояние, КодОСК = "") Экспорт
	Запись 						= РегистрыСведений.ОбменСНСИ.СоздатьМенеджерЗаписи();
	Запись.Объект 				= Объект; 	
	Запись.Идентификатор 		= Идентификатор;
	Запись.Состояние 			= Состояние;
	Запись.КодОСК				= КодОСК;
	Запись.Записать();
